<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions">
    <h2>Khóa học của tôi</h2>
    <div>
        {{#if deletedCount}}
        <a href="/me/trash/courses">Thùng rác ({{deletedCount}})</a>
        {{/if}}
        <div class="mt-4 d-flex align-items-center p-2">
            <div class="form-check me-4">
            <input class="form-check-input" type="checkbox" value="" id="check-all">
            <label class="form-check-label" for="check-all">
                Chọn tất cả
            </label>    
            </div>
            <select class="form-select form-select-sm select-options me-4" name="action" aria-label="Default select example">
                <option value="" >-- Hành động --</option>
                <option value="delete">Xóa</option>
            </select>
            <button class="btn btn-primary btn-sm check-all-submit-btn disabled">Oke</button>
        </div>

    </div>
    <table class="table mt-4">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">STT</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Trình độ</th>
            <th scope="col">Mô tả</th>
            <th scope="col" colspan="2">Thời gian tạo</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <th>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="coursesIds[]" value="{{this._id}}">
                </div>
            </th>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.level}}</td>
            <td>{{this.description}}</td>
            <td>{{this.createdAt}}</td>
            <td>
                <a href="/courses/{{_id}}/edit" class="btn btn-light">Sửa</a>
                <a href="/" class="btn btn-light" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-course">Xóa</a>

            </td>
        </tr>
        {{else}}
        <tr>
            <th colspan="6" class="text-center">
                <h3>Bạn chưa có khóa học nào.</h3> 
                <a href="/courses/create">Tạo khóa học ngay</a>
            </th>
        </tr>

        {{/each}}
    </tbody>
    </table>
</form>

<!-- Modal -->
<div class="modal fade" id="delete-course" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Bạn có chắc muốn xóa chứ</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Nếu muốn thì oke đi
        </div>
        <div class="modal-footer">
            <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        </div>
        </div>
    </div>
</div>

{{!-- delete hidden form --}}
<form method='POST' name="delete-course-form"></form>

<script>
    var deleteCourse = document.getElementById('delete-course')
    //lấy ra cái form bên trên
    var deleteForm = document.forms['delete-course-form']
    var containerForm = document.forms['container-form']
    var btnDeleteCourse = document.getElementById('btn-delete-course')
    var courseId
    var checkboxAll = document.getElementById('check-all')
    var coursesItemCheckbox = document.querySelectorAll('input[name="coursesIds[]"]')
    var checkAllSubmitBtn = document.querySelector('.check-all-submit-btn')
    
    //when dialog confirm clicked
    deleteCourse.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget
        courseId = button.getAttribute('data-id')
    })

    //when delete course btn click
    btnDeleteCourse.addEventListener('click', () => {
        //xét lại thuôc tính action cho form
        deleteForm.action = '/courses/' + courseId + '?_method=DELETE'
        deleteForm.submit()
    })
    
    //when checkbox all clicked
    checkboxAll.onchange = function() {
        var isCheckboxAll = checkboxAll.checked
        coursesItemCheckbox.forEach(function(courseItemCheckbox) {
            courseItemCheckbox.checked = isCheckboxAll
        })  
            RenderCheckAllSubmitBtn()
    }

    //course Item onchange
    coursesItemCheckbox.forEach(function(courseItemCheckbox) {
        courseItemCheckbox.onchange = function() {
            var isCheckboxAll = coursesItemCheckbox.length === document.querySelectorAll('input[name="coursesIds[]"]:checked').length
            checkboxAll.checked = isCheckboxAll
            RenderCheckAllSubmitBtn()
        }
    })

    //check all submit button
    checkAllSubmitBtn.addEventListener('submit', function() {
        //check button disable or enable
        var isSubmitable = !checkAllSubmitBtn.classList.contains('disabled')
        if(!isSubmitable) {
            e.preventDefault()
        }
    })

    //Re-render check all submit button
    function RenderCheckAllSubmitBtn() {
        var checkedCount = document.querySelectorAll('input[name="coursesIds[]"]:checked').length
        //sử dụng truThy và Falsy
        if(checkedCount) {
            checkAllSubmitBtn.classList.remove('disabled')
        }
        else {
            checkAllSubmitBtn.classList.add('disabled')
        }
    }
</script>